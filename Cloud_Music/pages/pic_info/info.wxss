/* pages/pic_info/info.wxss */

.box {
  position: relative;
  height: 100%;
}

.pic-title {
  position: relative;
  height: 30%;
  overflow: hidden;
}

.bg-box {
  position: absolute;
  left: 0;
  top: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background-repeat: no-repeat;
}

.bg-box ::after {
  content: " ";
  background-color: rgba(0, 0, 0, 0.25);
}

.bg-cover {
  position: absolute;
  z-index: 99;
  width: 30%;
  margin: 25px 20px;
  padding: 10px;
}

.pic-lin {
  position: relative;
}

.pic-txt {
  width: 50%;
  position: absolute;
  margin: 30px 20px;
  right: -1%;
  font-size: 1rem;
  z-index: 99;
  color: #fff;
  text-align: left;
}

.pic-nickname {
  font-size: 12px;
  margin-top: 20px;
  color: #ccc;
}

.autor-img {
  display: inline-block;
  width: 30px;
  height: 30px;
  z-index: 999;
  border-radius: 30px;
  vertical-align: middle;
  padding-right: 5px;
}

.autor-img-after {
  display: inline-block;
  width: 15px;
  height: 15px;
  position: absolute;
  left: 25px;
  margin-top: 15px;
  background-image: url(data:image/png;base64,);
}

.pic-nav {
  width: 100%;
  height: 21%;
  z-index: 99;
  overflow: hidden;
}

.Label {
  background-color: rgb(255, 255, 255);
  color: #333;
  padding: 10px;
  position: relative;
}

.tabs {
  margin: 0 2px;
  padding: 5px;
  font-size: 10px;
  color: #ccc;
  border: 0.5px solid #ccc;
  border-radius: 10px;
}

.description {
  margin-top: 10px;
  overflow: hidden;
  text-overflow: ellipsis;
  text-overflow: -o-ellipsis-lastline;
  text-align: left;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
  position: relative;
}

.song-title {
  height: 23px;
  line-height: 23px;
  padding: 0 10px;
  font-size: 12px;
  color: #666;
  background-color: #eeeff0;
}
.song-index{
  width: 12%;
  height: 55px;
  line-height: 40px;
  text-align: center;
  font-size: 16px;
  color: #999;
  float: left;
}
.song-name{
  position: relative;
  width: 88%;
  height: 55px;
  float: right;
}
.song-Music{
  display:inline-block;
  width: 240px;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  word-break: normal;
}
.song-author{
  display: inline-block;
  color: #999;
  font-size: 12px;
}
.play{
  position: absolute;
  right: 10px;
  top:15px;
  width: 22px;
  height: 22px;
}