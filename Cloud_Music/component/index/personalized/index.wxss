/* component/index/personalized/index.wxss */

.box-title {
  border-left: 2px solid #d43c33;
  margin-top: 20px;
  margin-bottom: 10px;
  padding-left: 10px;
  font-size: 16px;
}

.pic-box {
  width: 33.3%;
  border: 0.5px solid rgb(255, 252, 252);
  box-sizing: border-box;
  display: inline-block;
  position: relative;
  text-align: right;
  
}
.pic-num-box{
  width: 100px;
  height: 50px;
  padding-left: 5px;
  position: absolute;
  top:0;
  right:0;
  vertical-align:middle;
  margin-right: 5px;
}
.pic-introduce{
  height: 35px;
  font-size: 13px;
  text-align: left;
  padding: 5px;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}
.pic-img {
  width: 100%;
}
 .pic-clickNum-after{
   display:inline-block;
  width: 15px;
  height: 15px;
  background: url(data:image/png;base64,) 100% no-repeat;
  z-index: 999;
  margin-right: 5px;
}

.pic-clickNum{
  display:inline-block;
  z-index: 99;
  min-width: 0px;
  color: #fff;
  text-align: right;
  font-size: 12px;
}
.SQ{
  display:inline-block;
  position: absolute;
  left:10px;
  top:35px;
  padding:1px;
  font-size: 6px;
  margin-right: 3px;
  border: 0.5px solid #d43c33;
  color: #d43c33;
}

.song-box{
  padding:10px; 
  font-size: 16px;
  height: 30px;
  position: relative;
}

.song-singer{
  font-size:12px;
  color: #888;
  }
.song-introduce{
   color: #888;
}
.song-live{
  display: inline-block;
  width: 7%;
  position:absolute;
  top:50%;
  right:10px;
  margin-top:-15px;
  padding-left: 20px;
}

.live-i{
  width: 100%;
}